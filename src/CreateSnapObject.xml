<?xml version="1.0"?>
<dialog buttons="accept, cancel" title="Create Snap Object">
	<vbox>
		<label id="expl1" value="Use numbers 1 to 5 to toggle check boxes on or off." />
		<label id="expl2" value="Enter to confirm." />
		<spacer></spacer>
		<spacer></spacer>
		<checkbox id="one"   label="weight 1" checked = "false" class="control" accesskey="1" />
		<checkbox id="two"   label="weight 2" checked = "false" class="control" accesskey="2" />
		<checkbox id="three" label="weight 3" checked = "false" class="control" accesskey="3" />
		<checkbox id="four"  label="weight 4" checked = "false" class="control" accesskey="4" />
		<checkbox id="five"  label="weight 5" checked = "false" class="control" accesskey="5" />
		<spacer></spacer>
		<spacer></spacer>
		<spacer></spacer>
		<label id="expl3" value="EDAP Tools Keyboard shortcut set allows quick access" />
		<label id="expl4" value="to Create Snap Object without the need of this dialog box." />
		<label id="expl5" value="Create Snap Objects by pressing 1, 2, 3, 4 or 5 on your keyboard." />
		<label id="expl6" value="More information on how to use Smart Snap functionality available" />
		<label id="expl7" value="in the EDAPT Help and online." />

		<spacer></spacer>
		<separator></separator>
		<spacer></spacer>
	</vbox>
</dialog>

