<dialog buttons="accept, cancel" title="Rename Library Items">
	<vbox>
		<grid>
			<columns>
				<column />
				<column />
			</columns>
			<rows>
				<row>
					<spacer></spacer>
					<label value="Prefix / Suffix"/>
				</row>
				<row>
					<label value="Prefix:      " />
					<textbox id="Prefix" size="40"/>
				</row>
				<row>
					<label value="Suffix:      " />
					<textbox id="Suffix" size="40"/>
				</row>	
			</rows>
		</grid>
	<checkbox id="EntireLibrary" label="Work in Entire Library ( Ignore selection ) ?" checked = "false" />
	<spacer></spacer>
	<separator></separator>
	<spacer></spacer>
	</vbox>
</dialog>